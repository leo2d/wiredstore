@model Wired.Models.Entities.Customer

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar dados</h4>
<h6 class="text-danger">**As alterações só surtirão efeito da proxima vez que você logar</h6>

<hr />
<div class="container container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nome</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Nova Senha</label>
                    <input asp-for="Password" value="" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index">Voltar</a>
                    <button type="submit" class="btn btn-submit col-sm-6">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
